#program step(t).

%*
#minimize{ t@3,R,t : move(R,t)    ;
	   t@3,R,t : pickup(R,t)  ;
 	   t@3,R,t : putdown(R,t) ;
 	   t@3,R,t : deliver(R,t) }.

wait(R,t) :- not pickup(R, t), not putdown(R, t), not deliver(R, t), not move(R, t), isRobot(R).

straight(R,t) :- move(R,D,t), move(R,D,t-1).

